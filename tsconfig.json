{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-native",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}